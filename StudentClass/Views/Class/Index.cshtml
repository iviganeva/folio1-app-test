@model StudentClass.ViewModel.ClassStudents

@{
    ViewBag.Title = "Classes";
}

<h2>Classes</h2>

<table class="table" border="1">
    <tr class="success">
        <th>Class Name</th>
        <th>Location</th>
        <th>Teacher Name</th>
        <th colspan="3"></th>
    </tr>

    @foreach (var item in Model.Classes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.ActionLink("Show Students", "Index", "Class", new { id = item.ID }, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Class", new { id = item.ID }, null)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Class", new { id = item.ID }, null)
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("ADD", "Create", "Class")
</p>

<h3>Students</h3>

@if (Model.Students != null)
{
    <table class="table" border="1">
        <tr class="success">
            <th>Student Name</th>
            <th>Age</th>
            <th>GPA</th>
            <th colspan="2"></th>
        </tr>

        @foreach (var item in Model.Students)
        {
            string higherGPA = "";
            if (item.GPA >= 3.2m)
            {
                higherGPA = "font-bold";
            }
            <tr>
                <td class="@higherGPA">
                    @item.FullName
                </td>
                <td>
                    @item.Age
                </td>
                <td>
                    @item.GPA
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Student", new { id = item.ID }, null)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "Student", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
}
<p>
    @Html.ActionLink("ADD", "Create", "Student")
</p>

